{% extends "base.twig" %}

{% block content %}
    {% if posts %}
        <div class="flex flex-wrap -mx-2">
            {% for post in posts %}
                {% include ['partials/tease-'~post.post_type~'.twig', 'partials/tease.twig'] %}
            {% endfor %}
        </div>
        {{ fn('the_posts_navigation') }}
    {% endif %}
{% endblock %}